<!-- Doctype HTML5 -->
<!doctype html>
<html lang="{{#if language}}{{language}}{{else}}ru{{/if}}" dir="ltr">
{{#block "head"}}
  <head>
    {{#block "title"}}
      <title>{{title}}</title>
    {{/block}}

    {{#block "styles"}}
      {{#each stylesheets}}
        <link href="{{this}}" rel="stylesheet"/>
      {{/each}}
    {{/block}}
  </head>
{{/block}}

{{#block "body"}}
  <body class="{{bodyclass}}">
  {{#block "main"}}
  {{/block}}
  {{#block "scripts"}}
    {{#each scripts}}
      <script defer src="{{this}}"></script>
    {{/each}}
  {{/block}}
  </body>
{{/block}}
</html>